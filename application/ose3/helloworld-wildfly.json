{
   "kind": "Template",
   "apiVersion": "v1",
   "metadata": {
      "name": "helloworld-wildfly"
   },
   "labels": {
      "application": "helloworld",
      "runtime": "wildfly",
      "createdBy": "helloworld-wildfly"
   },
   "parameters": [
      {
         "description": "The name for the application.",
         "name": "APPLICATION_NAME",
         "value": "helloworld-wildfly"
      },
      {
         "description": "DNS name where the application will be accesible. Leave empty for autogenerated.",
         "name": "APPLICATION_HOSTNAME"
      },
      {
         "description": "Maven repository to use. Choose from: nexus (default), eap, community. Prefix with -P",
         "name": "MAVEN_REPO_PROFILE",
         "value": "-P nexus"
      }
   ],
   "objects": [
      {
         "kind": "BuildConfig",
         "apiVersion": "v1",
         "metadata": {
            "name": "${APPLICATION_NAME}"
         },
         "spec": {
            "triggers": [
               {
                  "type": "GitHub",
                  "github": {
                     "secret": "secret"
                  }
               },
               {
                  "type": "Generic",
                  "generic": {
                     "secret": "secret"
                  }
               },
               {
                  "type": "ImageChange",
                  "imageChange": {}
               }
            ],
            "source": {
               "type": "Git",
               "git": {
                  "uri": "https://github.com/jorgemoralespou/nexus-ose"
               },
               "contextDir": "application/sample-webapp"
            },
            "strategy": {
               "type": "Source",
               "sourceStrategy": {
                  "from": {
                     "kind": "DockerImage",
                     "name": "docker.io/openshift/wildfly-81-centos7:latest"
                  },
                  "env": [
                     {
                        "name": "MAVEN_ARGS",
                        "value": "package ${MAVEN_REPO_PROFILE} -DskipTests -s settings.xml"
                     }
                  ]
               }
            },
            "output": {
               "to": {
                  "kind": "ImageStreamTag",
                  "name": "${APPLICATION_NAME}:latest"
               }
            },
            "resources": {}
         }
      },
      {
         "kind": "ImageStream",
         "apiVersion": "v1",
         "metadata": {
            "name": "${APPLICATION_NAME}"
         },
         "spec": {
            "tags": [
               {
                  "name": "latest"
               }
            ]
         }
      },
      {
         "kind": "DeploymentConfig",
         "apiVersion": "v1",
         "metadata": {
            "name": "${APPLICATION_NAME}"
         },
         "spec": {
            "strategy": {
               "type": "Rolling"
            },
            "triggers": [
               {
                  "type": "ImageChange",
                  "imageChangeParams": {
                     "automatic": true,
                     "containerNames": [
                        "${APPLICATION_NAME}"
                     ],
                     "from": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}:latest"
                     }
                  }
               }
            ],
            "replicas": 1,
            "selector": {
               "deploymentConfig": "${APPLICATION_NAME}"
            },
            "template": {
               "metadata": {
                  "name": "${APPLICATION_NAME}",
                  "labels": {
                     "deploymentConfig": "${APPLICATION_NAME}"
                  }
               },
               "spec": {
                  "containers": [
                     {
                        "name": "${APPLICATION_NAME}",
                        "image": "${APPLICATION_NAME}",
                        "ports": [
                           {
                              "name": "http",
                              "containerPort": 8080,
                              "protocol": "TCP"
                           },
                           {
                              "name": "ping",
                              "containerPort": 8888,
                              "protocol": "TCP"
                           }
                        ],
                        "env": [
                           {
                              "name": "OPENSHIFT_DNS_PING_SERVICE_NAME",
                              "value": "${APPLICATION_NAME}-ping"
                           },
                           {
                              "name": "OPENSHIFT_DNS_PING_SERVICE_PORT",
                              "value": "8888"
                           },
                           {
                              "name": "HORNETQ_CLUSTER_PASSWORD",
                              "value": "secret"
                           },
                           {
                              "name": "HORNETQ_QUEUES"
                           },
                           {
                              "name": "HORNETQ_TOPICS"
                           }
                        ],
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log",
                        "imagePullPolicy": "Always"
                     }
                  ],
                  "restartPolicy": "Always",
                  "dnsPolicy": "ClusterFirst"
               }
            }
         }
      },
      {
         "kind": "Route",
         "apiVersion": "v1",
         "metadata": {
            "name": "${APPLICATION_NAME}-http",
            "annotations": {
               "description": "Route for application's http service."
            }
         },
         "spec": {
            "host": "${APPLICATION_HOSTNAME}",
            "to": {
               "kind": "Service",
               "name": "${APPLICATION_NAME}"
            }
         }
      },
      {
         "kind": "Service",
         "apiVersion": "v1",
         "metadata": {
            "name": "${APPLICATION_NAME}",
            "annotations": {
               "description": "The web server's http port."
            }
         },
         "spec": {
            "ports": [
               {
                  "port": 8080,
                  "targetPort": 8080
               }
            ],
            "selector": {
               "deploymentConfig": "${APPLICATION_NAME}"
            },
            "type": "ClusterIP",
            "sessionAffinity": "None"
         }
      },
      {
         "kind": "Service",
         "apiVersion": "v1",
         "metadata": {
            "name": "${APPLICATION_NAME}-ping",
            "annotations": {
               "description": "Ping service for clustered applications."
            }
         },
         "spec": {
            "ports": [
               {
                  "port": 8888,
                  "targetPort": 8888
               }
            ],
            "selector": {
               "deploymentConfig": "${APPLICATION_NAME}"
            },
            "portalIP": "None",
            "clusterIP": "None",
            "type": "ClusterIP",
            "sessionAffinity": "None"
         }
      }
   ]
}